# Maintainer: Eshan Aryan<src.eshan@gmail.com>

pkgbase=eshanizedos-gnome-settings
_gitname=eshanizedos-gnome-settings
pkgname=(
    'eshanizedos-gnome-settings'
    )
pkgver=r6.ee11897
pkgrel=1
arch=('any')
_branch='master'
url="https://github.com/eshanizedos/eshanizedos-gnome-settings"
license=('GPL')
makedepends=('git')
source=("git+$url.git#branch=${_branch}")
sha256sums=('SKIP')

_install() {
    if [[ -d $srcdir/$_gitname/$1/etc ]]; then
        install -d $pkgdir/etc
        cp -rf $srcdir/$_gitname/$1/etc $pkgdir
    fi

    if [[ -d $srcdir/$_gitname/$1/usr ]]; then
        install -d $pkgdir/etc
        cp -rf $srcdir/$_gitname/$1/usr $pkgdir
    fi
    
    if [[ -d $srcdir/$_gitname/$1/skel ]]; then
        install -d $pkgdir/etc
        cp -rf $srcdir/$_gitname/$1/skel $pkgdir/etc
    fi

}

pkgver() {
	cd "$srcdir/eshanizedos-gnome-settings"

# Git, no tags available
	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"

}

package_eshanizedos-gnome-settings() {
    pkgdesc='Eshanized GNOME'
    depends=(
        'fluent-icon-theme'
        'orchis-theme'
        'apple_cursor'
        )
 
    install=eshanizedos-gnome-settings.install

    _install ''
}
